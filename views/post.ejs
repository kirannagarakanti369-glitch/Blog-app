<%- include('partials/header', { title: post.title }) %>

<div class="container">
    <article class="single-post">
        <h1 class="single-post-title"><%= post.title %></h1>
        <div class="post-meta">
            Posted on <%= new Date(post.created_at).toLocaleDateString() %>
            <% if (post.updated_at !== post.created_at) { %>
                • Updated on <%= new Date(post.updated_at).toLocaleDateString() %>
            <% } %>
        </div>
        
        <% if (post.image_url) { %>
            <img src="<%= post.image_url %>" alt="<%= post.title %>" class="single-post-image">
        <% } %>
        
        <div class="post-content">
            <%= post.content.replace(/\n/g, '<br>') %>
        </div>
        
        <div class="post-actions">
            <a href="/" class="btn btn-secondary">← Back to Home</a>
            <a href="/posts/<%= post.id %>/edit" class="btn">Edit Post</a>
            <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete Post</button>
            </form>
        </div>
    </article>
</div>

<%- include('partials/footer') %>