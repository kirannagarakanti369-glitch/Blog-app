<%- include('../partials/header', { title: 'Login' }) %>

<div class="form-container">
    <div class="form-card">
        <h1 class="form-title">Welcome Back</h1>
        
        <% if (errors.length > 0) { %>
            <div class="error-message" style="background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%); color: white; padding: 1rem; border-radius: 8px; margin-bottom: 2rem;">
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <% errors.forEach(error => { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="username">Username or Email</label>
                <input type="text" id="username" name="username" class="form-control" 
                       value="<%= formData.username || '' %>" required 
                       placeholder="Enter your username or email">
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control" 
                       required placeholder="Enter your password">
            </div>
            
            <div class="post-actions">
                <button type="submit" class="btn btn-primary">Sign In</button>
                <a href="/auth/register" class="btn btn-secondary">Create Account</a>
            </div>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>